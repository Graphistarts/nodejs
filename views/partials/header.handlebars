{{#if overall.isheader}}
<header class="main-header clearfix">
    <div class="wrapper clearfix">
        <div class="logo">
            <a href="/home">
                <img src="../img/logo.svg" alt="Logo Squiks"/>
                <h1>Squiks</h1>
            </a>
        </div>
        <nav>
            <ul>
                <li>
                    <a href="/home" {{#if overall.active_home}}class="active"{{/if}}>Home</a>
                </li>
                <li>
                    <a href="/penpal" {{#if overall.active_penpal}}class="active"{{/if}}>Find a penpal</a>
                </li>
                <li>
                    <a href="/conversations" {{#if overall.active_conversations}}class="active"{{/if}}>Messages</a>
                </li>
                <li class="dd-profile">
                    <button>
                        <img src="/{{{session.profile_picture}}}" alt="Profile picture"/>
                    </button>
                    <ul class="dd">
                        <li><a href="/profile"><img src="../img/profile.svg" alt="profile picture"/>Profile</a></li>
                        <li><a href="/account/disconnect" class="disconnect"><img src="../img/arrow.svg" alt="profile picture"/>Log out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</header>

{{/if}}